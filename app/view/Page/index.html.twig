{% extends 'Layout/layout.html.twig' %}

{% block title %}
    {{ parent() }} - Accueil
{% endblock %}

{% block content %}

    <div class="d-flex justify-center w100 p20">
        <a href="./generateur"><div class="p20 bc2">Générateur</div></a>
    </div>

    <section class="d-flex flex-column justify-center align-center w100 bc3">

        <h2 class="fs24 p20">Derniers memes</h2>
    
        <div class="d-flex flex-row justify-spacea w75">

        {% if images|length > 0 %}
            {% for image in images %}
                <article class="w25 p20">
                    <img class="w100" src="./assets/upload/{{ image.NAME }}" alt="">
                </article>
            {% endfor %}
        {% endif %}

        </div>

    </section>

{% endblock %}